---
interface ArticleContainerProps {
    articleId: string;
    title: string;
}
const { articleId, title } = Astro.props as ArticleContainerProps;
---

<article id={articleId} class="font-medium pt-16 sm:pt-20 lg:pt-24">
    <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-between mt-3 pb-8 sm:pb-10 items-center">
        <hr class="custom-hr hidden sm:block">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-center sm:text-left whitespace-nowrap">{title}</h2>
        <hr class="custom-hr hidden sm:block">
    </div>
    <slot />
</article>

<style>
    .custom-hr {
        border: none;
        height: 2px;
        background-color: #6366e6;
        opacity: 0.80;
        flex: 1;
    }
</style>
