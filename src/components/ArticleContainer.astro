---
interface ArticleContainerProps {
    articleId: string;
    title: string;
}
const { articleId, title } = Astro.props as ArticleContainerProps;
---

<article id={articleId} class="font-medium pt-24">
    <h2 class="text-4xl font-bold">{title}</h2>
    <hr class="custom-hr mt-3 mb-5">
    <slot />
</article>

<style>
    .custom-hr {
        border: none;
        height: 2px;
        background-color: #6366e6;
        opacity: 0.80;
    }
  </style>