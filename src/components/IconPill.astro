<style>
    .hover-animation {
      position: relative;
      overflow: hidden;
      transition: transform 0.3s ease;
    }
  
    .hover-animation::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #6366e6;
      transition: transform 0.3s ease;
      transform: scaleX(0);
      transform-origin: left;
      z-index: -1;
    }
  
    .hover-animation:hover::before {
      transform: scaleX(1);
    }

    @media (max-width: 640px) {
      .hover-animation {
        min-height: 44px; /* Ensure minimum touch target size */
      }
    }
</style>
  
<div class="flex flex-row flex-wrap py-2 sm:py-1 px-3 sm:px-4 border-2 rounded-full border-custom-blue justify-center items-center hover-animation transition-all duration-200">
    <slot />
</div>
