<style>
    .hover-animation {
      position: relative;
      overflow: hidden; /* Asegura que el pseudo-elemento no se desborde */
      transition: transform 0.3s ease;
    }
  
    .hover-animation::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #6366e6; /* Cambia el color a azul */
      transition: transform 0.3s ease; /* Transición para la animación de expansión */
      transform: scaleX(0); /* Inicialmente el pseudo-elemento está colapsado horizontalmente */
      transform-origin: left; /* Inicia la expansión desde la izquierda */
      z-index: -1; /* Asegura que el pseudo-elemento esté detrás del contenido */
    }
  
    .hover-animation:hover::before {
      transform: scaleX(1); /* Expande el pseudo-elemento horizontalmente */
    }
  
    
  </style>
  
  <div class="flex flex-row flex-wrap py-1 px-4 border-2 rounded-full border-custom-blue justify-center items-center hover-animation">
    <slot />
  </div>
  