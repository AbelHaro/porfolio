---
interface NavItem {
  href: string;
  text: string;
}

const { href, text } = Astro.props as NavItem;
---

<style>
  .nav-item {
    position: relative;
    opacity: 0.9;
    transition: transform 0.3s ease, color 0.3s ease;
  }
  
  .nav-item::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: currentColor;
    visibility: hidden;
    transform: scaleX(0);
    transition: transform 0.3s ease-in-out, visibility 0.3s ease-in-out;
  }

  .nav-item:hover::after {
    visibility: visible;
    transform: scaleX(1);
  }
</style>

<a class="nav-item" href={href}>{text}</a>
