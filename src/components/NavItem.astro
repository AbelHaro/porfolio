---
interface NavItem {
  href: string;
  text: string;
}

const { href, text } = Astro.props as NavItem;
---

<style>
  .nav-item {
    position: relative;
    display: inline-block; /* Asegura que el ancho del elemento se ajuste al contenido */
    padding: 0.5rem; /* Ajusta el padding seg√∫n sea necesario */
    color: inherit; /* Asegura que el color del texto se herede del contenedor */
    text-decoration: none; /* Quita el subrayado por defecto del enlace */
    opacity: 0.9;
    transition: transform 0.3s ease, color 0.3s ease;
  }
  
  .nav-item::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px; /* Ajusta el grosor de la barra */
    bottom: 0;
    left: 0;
    background-color: currentColor; /* Usa el color del texto para la barra */
    visibility: hidden;
    transform: scaleX(0);
    transition: transform 0.3s ease-in-out, visibility 0.3s ease-in-out;
  }

  .nav-item:hover::after {
    visibility: visible;
    transform: scaleX(1);
  }
</style>

<a class="nav-item" href={href}>{text}</a>
