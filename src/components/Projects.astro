---
import { projects, technologyIcons } from '../data/projects';
import IconPill from './IconPill.astro';
import ArticleContainer from './ArticleContainer.astro';
---
<ArticleContainer title="Proyectos">
    <ul>
        {projects.map((project) => (
          <li>
            <section class="flex flex-row p-10 border border-cyan-300">
                <div class="flex flex-col">
                    <h3>{project.title}</h3>
                    <p>{project.description}</p>
                    <div class="flex flex-row flex-wrap gap-3">
                        {project.technologies.map((technology) => (
                          <IconPill>{technology}</IconPill>
                        ))}
                    </div>
                    <a href={project.url} target="_blank" rel="noreferrer">View project</a>
                </div>
            </section>
          </li>
        ))}
      </ul>
</ArticleContainer>
  

