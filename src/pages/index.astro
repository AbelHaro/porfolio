---
import '../styles/global.css';
import AboutMe from '@/sections/AboutMe.astro';
import Experience from '@/sections/Experience.astro';
import Projects from '@/sections/Projects.astro';
import PersonalInfo from '@/sections/PersonalInfo.astro';
import Footer from '@/sections/Footer.astro';
import Nabvar from '@/components/Nabvar.astro';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Portafolio personal de Abel Haro Armero: experiencia, proyectos y tecnologías." />
		<title>Abel Haro Armero | Portafolio</title>
		<script>
			const theme = localStorage.getItem("theme") || "system";
			const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
			const shouldUseDark = theme === "dark" || (theme === "system" && prefersDark);
			if (shouldUseDark) {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
			document.documentElement.dataset.theme = theme;
		</script>
	</head>

	<body>
		<main class="min-h-screen">
			<div class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8 pt-4 sm:pt-6 pb-10 sm:pb-14 space-y-12 sm:space-y-16">
				<Nabvar />
				<PersonalInfo />

				<section id="about" class="space-y-5">
					<h2 class="text-2xl sm:text-3xl font-bold">Sobre mí</h2>
					<AboutMe />
				</section>

				<section id="experience" class="space-y-5">
					<h2 class="text-2xl sm:text-3xl font-bold">Experiencia</h2>
					<Experience />
				</section>

				<section id="projects" class="space-y-5">
					<h2 class="text-2xl sm:text-3xl font-bold">Proyectos</h2>
					<Projects />
				</section>
			</div>
			<Footer />
		</main>
	</body>
</html>
