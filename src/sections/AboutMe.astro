---
import Tecnologies from "./Tecnologies.astro" // This import was noted as unused in previous build logs
import ArticleContainer from "../components/ArticleContainer.astro"
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<ArticleContainer title={t('about.title')} articleId="aboutMe">
    <section>
        <p class="text-wrap text-lg sm:text-xl leading-relaxed">
            {t('about.description')}
        </p>
    </section>
    
    <section class="gap-2 mt-8 sm:mt-10">
        <h4 class="text-2xl sm:text-3xl mb-4">
            Educación
        </h4>
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2 sm:gap-4">
            <p class="text-lg sm:text-xl">
                Grado en Ingeniería Informática en la Universitat Politècnica de València
            </p>
            <p class="text-lg sm:text-xl text-gray-400 sm:text-right">
                Septiembre 2021 - Actualidad
            </p>
        </div>
    </section>
    
    <section class="flex flex-col mt-8 sm:mt-10">
        <h4 class="text-2xl sm:text-3xl mb-4">
            Idiomas
        </h4>
        <div class="space-y-2">
            <p class="text-lg sm:text-xl">
                Español - Nativo
            </p>
            <p class="text-lg sm:text-xl">
                Inglés - B2
            </p>
        </div>
    </section>
</ArticleContainer>
