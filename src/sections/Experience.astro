---
import ArticleContainer from "../components/ArticleContainer.astro"
import { experience } from "../data/experience";
---

<ArticleContainer title={"Experience"} articleId="experience">
    <ol class="relative border-s border-gray-200 dark:border-gray-700">
        {experience.map(item => (
            <li class="ms-4 mb-10">
                <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
                <div class="pl-5">
                    <time class="mb-1 text-sm font-normal text-gray-400 block">{item.date}</time>
                    <h3 class="text-lg font-semibold text-white mb-2">{item.title}</h3>
                    <p class="text-base font-normal text-gray-300">
                        {item.description}
                    </p>
                </div>
            </li>
        ))}
    </ol>
</ArticleContainer>
