---
import ArticleContainer from "../components/ArticleContainer.astro"
import { experience } from "../data/experience";
---

<ArticleContainer title={"Experiencia"} articleId="experience">
    <ol class="relative border-s border-gray-200 dark:border-gray-700 ml-2 sm:ml-4">
        {experience.map(item => (
            <li class="ms-4 sm:ms-6 mb-8 sm:mb-10">
                <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
                <div class="pl-3 sm:pl-5">
                    <time class="mb-2 text-sm sm:text-base font-normal text-gray-400 block">{item.date}</time>
                    <h3 class="text-lg sm:text-xl font-semibold text-white mb-1">{item.title}</h3>
                    <p class="text-base sm:text-lg font-semibold italic mb-3 text-custom-blue">{item.place}</p>
                    <p class="text-sm sm:text-base font-normal text-gray-300 leading-relaxed">
                        {item.description}
                    </p>
                </div>
            </li>
        ))}
    </ol>
</ArticleContainer>
