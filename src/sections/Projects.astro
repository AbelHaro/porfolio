---
import { projects } from '../data/projects';
import IconPill from '../components/IconPill.astro';
import ArticleContainer from '../components/ArticleContainer.astro';
---
<ArticleContainer title="Proyectos" articleId="projects">
    <ul class="flex flex-col gap-14">
        {projects.map((project) => (
          <li>
            <section class="flex flex-row">
                <div class="flex flex-col">
                    <a href={project.url} target="_blank" rel="noreferrer" class="flex gap-4 items-center">
                      <h3 class="text-2xl">{project.title}</h3>
                      <IconPill>
                       <img src="icons/github.svg" alt="github icon" class="size-5 hover:scale-110"/>
                       <p class="ml-2">Ver en Github</p>
                      </IconPill>
                      </a>
                    <p class="text-lg mt-3">{project.description}</p>
                    <div class="mt-3 flex flex-row flex-wrap gap-3">
                      {project.technologies.map((technology) => (
                        <IconPill>
                          <img src={technology.source} alt={technology.name + "logo"} class="size-10" />
                          <p>{technology.name}</p>
                        </IconPill>
                      ))}
                    </div>
                    
                </div>
            </section>
          </li>
        ))}
      </ul>
</ArticleContainer>
  

