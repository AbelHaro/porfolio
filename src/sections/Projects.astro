---
import { projects } from '../data/projects';
import IconPill from '../components/IconPill.astro';
import ArticleContainer from '../components/ArticleContainer.astro';
---
<ArticleContainer title="Proyectos" articleId="projects">
    <ul >
        {projects.map((project) => (
          <li>
            <section class="flex flex-row p-10 border border-cyan-300">
                <div class="flex flex-col">
                    <h3>{project.title}</h3>
                    <p>{project.description}</p>
                    <div class="mt-3 flex flex-row flex-wrap gap-3">
                      {project.technologies.map((technology) => (
                        <IconPill>
                          <img src={technology.source} alt={technology.name + "logo"} class="size-10" />
                          <p>{technology.name}</p>
                        </IconPill>
                      ))}
                    </div>
                    <a href={project.url} target="_blank" rel="noreferrer">View project</a>
                </div>
            </section>
          </li>
        ))}
      </ul>
</ArticleContainer>
  

